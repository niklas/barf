<% title "Neue Nachricht" %>

<% form_for(@message) do |f| %>
  <%= f.error_messages %>

  <p>
    <%= f.label :author, 'Your Name (optional)' %><br />
    <%= f.text_field :author %>
  </p>
  <p>
    <%= f.label :body, 'Text' %><br />
    <%= f.text_field :body %>
  </p>
  <p>
    <%= f.label :lifespan, 'Lebenserwartung' %><br />
    <%= f.collection_select :lifespan, Message::Lifespans, :last, :first %>
  </p>
  <p>
    <%= f.submit 'Create' %>
  </p>
<% end %>

<% content_for :tabs do %>
  <%= link_to t(:back), messages_path, :class => 'index messages' %>
<% end %>
